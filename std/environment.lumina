import "string.lumina"


var envp = (str[])((int)argv + (8 * (1 + argc)));

func getEnvironmentVariable(str name) -> str {
	var i = 0;
	var nameLen = strlen(name);
	var value = envp[0];
	while (envp[i] != (str)0) {
		var len = strindex(value, '=');
		if (nameLen == len - 1 && strneq(name, value, len - 1)) {
			return (str)((int)value + len);
		}
		i = i + 1;
		value = envp[i];
	}

	return (str)0;
}
