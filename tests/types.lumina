import "../std/syscalls.lumina"


type StringView {
	str value;
	int length;
}

var string = new StringView();

string.value = "Hello, World!\n";
string.length = 14;

var STDOUT = 1;
write(STDOUT, string.value, string.length);

string.value[5] = '.';
string.length = 2 + 6 * 2;
write(STDOUT, string.value, string.length);

func strlen(str string) -> int {
	var i = 0;
	while (string[i] != '\0') {
		i = i + 1;
	}
	return i;
}

string.length = strlen(string.value);
write(STDOUT, string.value, string.length);
